<% if alert %>
   <div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>

<%= form_for @investment do |form| %>
 
  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.collection_select(:project_id, Project.all, :id, :name, {}, { class: "form-control" }) %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <%= form.button 'Invest!', class: "btn btn-success", data: { confirm: 'Are you sure?'} %>
<% end %>